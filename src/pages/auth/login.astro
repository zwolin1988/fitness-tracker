---
// src/pages/auth/login.astro
// Login page with Supabase Auth integration

import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";
import { Toaster } from "@/components/ui/sonner";

// Get optional redirect URL from query params
const url = new URL(Astro.request.url);
const redirectUrl = url.searchParams.get("redirect") || "/dashboard";
---

<Layout title="Logowanie - Fitness Tracker" showNavigation={true}>
  <div class="container mx-auto px-4 py-12">
    <LoginForm client:load redirectUrl={redirectUrl} />
  </div>
  <Toaster client:load />
</Layout>
