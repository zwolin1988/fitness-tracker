---
// src/pages/auth/register.astro
// Registration page with Supabase Auth integration

import Layout from "@/layouts/Layout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";
import { Toaster } from "@/components/ui/sonner";

// Get optional redirect URL from query params
const url = new URL(Astro.request.url);
const redirectUrl = url.searchParams.get("redirect") || "/dashboard";
---

<Layout title="Rejestracja - Fitness Tracker" showNavigation={true}>
  <div class="container mx-auto px-4 py-12">
    <RegisterForm client:load redirectUrl={redirectUrl} />
  </div>
  <Toaster client:load />
</Layout>
