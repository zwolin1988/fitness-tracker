---
import Layout from "@/layouts/Layout.astro";
import { PlanWizard } from "@/components/training-plan/PlanWizard";
import { Toaster } from "@/components/ui/sonner";

// Get plan ID from URL params
const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/plans");
}
---

<Layout title="Edytuj Plan Treningowy" showNavigation>
  <PlanWizard client:load mode="edit" planId={id} />
  <Toaster client:load />
</Layout>
