---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Fitness Tracker - Dashboard">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold text-center mb-8">Dashboard</h1>

    <!-- Statystyki -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-card text-card-foreground p-6 rounded-lg border">
        <h3 class="text-lg font-semibold mb-2">Dzisiejsze treningi</h3>
        <p class="text-3xl font-bold text-primary">0</p>
      </div>
      <div class="bg-card text-card-foreground p-6 rounded-lg border">
        <h3 class="text-lg font-semibold mb-2">Cele osiągnięte</h3>
        <p class="text-3xl font-bold text-green-600">0</p>
      </div>
      <div class="bg-card text-card-foreground p-6 rounded-lg border">
        <h3 class="text-lg font-semibold mb-2">Aktywne cele</h3>
        <p class="text-3xl font-bold text-blue-600">0</p>
      </div>
    </div>

    <!-- Szybkie akcje -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Szybkie akcje</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <a
          href="/workouts"
          class="bg-primary text-primary-foreground p-4 rounded-lg hover:bg-primary/90 transition-colors text-center"
        >
          <div class="text-2xl mb-2">🏋️</div>
          <div class="font-semibold">Treningi</div>
        </a>
        <a
          href="/goals"
          class="bg-secondary text-secondary-foreground p-4 rounded-lg hover:bg-secondary/90 transition-colors text-center"
        >
          <div class="text-2xl mb-2">🎯</div>
          <div class="font-semibold">Cele</div>
        </a>
        <a
          href="/progress"
          class="bg-accent text-accent-foreground p-4 rounded-lg hover:bg-accent/90 transition-colors text-center"
        >
          <div class="text-2xl mb-2">📊</div>
          <div class="font-semibold">Postępy</div>
        </a>
        <a
          href="/auth/login"
          class="border border-border bg-background p-4 rounded-lg hover:bg-accent transition-colors text-center"
        >
          <div class="text-2xl mb-2">👤</div>
          <div class="font-semibold">Profil</div>
        </a>
      </div>
    </div>

    <!-- Ostatnie aktywności -->
    <div>
      <h2 class="text-2xl font-bold mb-4">Ostatnie aktywności</h2>
      <div class="bg-card text-card-foreground p-6 rounded-lg border">
        <p class="text-muted-foreground text-center py-8">
          Brak ostatnich aktywności. Rozpocznij swój pierwszy trening!
        </p>
      </div>
    </div>
  </div>
</Layout>
