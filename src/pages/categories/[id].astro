---
import Layout from "@/layouts/Layout.astro";

export const prerender = false;

const { id } = Astro.params;
---

<Layout title="Szczegóły Kategorii" showNav>
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <a href="/categories" class="text-sm text-muted-foreground hover:text-primary inline-flex items-center gap-2">
        <span>←</span> Powrót do kategorii
      </a>
    </div>

    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Strona: Szczegóły Kategorii</h1>
      <p class="text-muted-foreground">Tutaj będą szczegóły kategorii i lista ćwiczeń w tej kategorii</p>
      <p class="text-sm text-muted-foreground mt-2">
        ID kategorii: <code class="bg-muted px-2 py-1 rounded">{id}</code>
      </p>
    </div>

    <div class="grid gap-6">
      <div class="bg-card rounded-lg border p-6">
        <h2 class="text-xl font-semibold mb-4">Informacje o kategorii</h2>
        <p class="text-muted-foreground">Nazwa, opis, obrazek i liczba ćwiczeń w kategorii</p>
      </div>

      <div class="bg-card rounded-lg border p-6">
        <h2 class="text-xl font-semibold mb-4">Lista ćwiczeń w kategorii</h2>
        <p class="text-muted-foreground mb-4">Grid z ćwiczeniami należącymi do tej kategorii</p>
        <div class="text-sm text-muted-foreground">
          <p class="font-semibold mb-2">Planowane funkcje:</p>
          <ul class="list-disc list-inside space-y-1">
            <li>Filtrowanie po poziomie trudności</li>
            <li>Karta każdego ćwiczenia z ikoną i opisem</li>
            <li>Link do szczegółów ćwiczenia</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="mt-4 text-sm text-muted-foreground">
      <p><strong>Endpoint API:</strong> GET /api/categories/{id}, GET /api/exercises?categoryId={id}</p>
    </div>
  </div>
</Layout>
