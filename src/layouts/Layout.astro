---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import { AppScrollArea } from "../components/layout/AppScrollArea";

interface Props {
  title?: string;
  showNavigation?: boolean;
}

const { title = "Fitness Tracker", showNavigation = true } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Aplikacja do śledzenia treningów i celów fitness" />
    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground overflow-hidden">
    {showNavigation && <Navigation />}
    <AppScrollArea client:load>
      <main class="container mx-auto px-4 py-8">
        <slot />
      </main>
    </AppScrollArea>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
</style>
